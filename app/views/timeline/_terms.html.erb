<ul id="short-term" class="clearfix">
<% @features.each do |feature| %>
  <li>
    <!-- <%= link_to "Click this", {:controller => 'features', :action => "show", :id => feature.id}, :remote => true, :class => 'remote_link' %> -->
    <%= link_to feature_path(feature), :remote => true, :class => 'remote-link' do %>
      <%= image_tag(feature.icon) %>
      <h2><%= feature.name %></h2>
      <p><%= feature.summary %></p>
    <% end %>
  </li>
<% end %>
</ul>

<ul class="long-term" class="clearfix">
  <h1>Long Term</h1>
<% @features.each do |feature| %>
  <li>
    <a href="#">
      <%= feature.name %>
    </a>
  </li>
<% end %>
</ul>

<ul class="mid-term" class="clearfix">
  <h1>Mid Term</h1>
<% @features.each do |feature| %>
  <li>
    <a href="#">
      <%= feature.name %>
    </a>
  </li>
<% end %>
</ul>

<div class="clearfix"></div>